<!DOCTYPE html>
<html>
  <head>
    <title>Reading file from JSON</title>

    <%include partials/links%> <%include partials/navbar%>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <div class="container my-5 py-3 z-depth-1 rounded">
      <section class="dark-grey-text">
        <div class="table-responsive">
          <table class="table product-table mb-0">
           
            <thead class="mdb-color lighten-5">
              <tr>
                <th></th>
                <th class="font-weight-bold">
                  <strong>title</strong>
                </th>
                <th class="font-weight-bold">
                  <strong>platform</strong>
                </th>
                
                <th class="font-weight-bold">
                  <strong>score</strong>
                </th>
                <th class="font-weight-bold">
                  <strong>genre</strong>
                </th>
                <th class="font-weight-bold">
                  <strong>editors_choice</strong>
                </th>
                
              </tr>
            </thead>

            <tbody>
              <% for(var i =0;i<dataToPass.length; i++){ %>
              <tr>
                <th scope="row">
                  <img src="../images/icon.png" alt="" height="50vh" />
                </th>
                <td>
                  <h5 class="mt-3">
                    <strong><%=dataToPass[i].title %></strong>
                  </h5>
                 
                </td>
            
                <td><%=dataToPass[i].platform %></td>
                <td><%=dataToPass[i].score %></td>
                <td><%=dataToPass[i].genre %></td>
                <td><%=dataToPass[i].editors_choice %></td>
                <%}%>
              </tr>
            </tbody>
          </table>
        </div>
      </section>
    </div>
  </body>
</html>
